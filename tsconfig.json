{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@secure-task-manage-app/data/*": [
        "./libs/data/src/lib/*"
      ],
      "@secure-task-manage-app/auth/*": [
        "./libs/auth/src/lib/*"
      ]
    }
  },
  "include": [
    "src",
    "apps",
    "libs"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}